---
import "../styles/global.css";
import { t } from "@/utils/i18n";
import SeoAlternates from "./SeoAlternates.astro";

export interface Props {
  title?: string;
  desc?: string;
  lang?: string;
  canonicalUrl?: string;
}

const { title, desc, lang = 'en', canonicalUrl } = Astro.props;
const siteTitle = title || t(lang, 'site.title');
const siteDescription = t(lang, 'site.description');
const baseUrl         = 'https://www.hoergen.com';
---

<title>{siteTitle}</title>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="author" content="Hörgen Radio" />
<meta name="description" content={siteDescription} />
<meta name="keywords" content="underground radio, techno, house music, electronic music, berlin techno, hoergen, hörgen" />

<!-- PWA Manifest -->
<link rel="manifest" href="/site.webmanifest" />

<!-- SEO Alternates and Canonical -->
<SeoAlternates currentLang={lang} canonicalUrl={canonicalUrl} />

<!-- JSON-LD: key pages for sitelinks -->
<script type="application/ld+json">
{JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "url": baseUrl + '/',
  "name": "Hoergen | Worldwide Broadcast of Underground House & Techno CUlture",
  "hasPart": [
    {
      "@type": "WebPage",
      "url": baseUrl + "/listeners",
      "name": "Listen Now"
    },
    {
      "@type": "WebPage",
      "url": baseUrl + "/creators",
      "name": "Become a Creator"
    }
  ]
}, null, 2)}
</script>

<!-- Favicon -->
<link rel="icon" type="image/png" sizes="150x150" href="/avatars/icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/avatars/icon.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/avatars/icon.png" />
<link rel="mask-icon" href="/avatars/icon.png" color="#26E056" />
<meta name="msapplication-TileColor" content="#000000" />
<meta name="theme-color" content="#26E056" />

<!-- HTML in your document's head -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<script src="https://unpkg.com/mailgo@0.12.2/dist/mailgo.min.js"></script>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/css/splide.min.css"
/>
<script
  defer
  src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"
></script>
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
></script>
