---
export interface Props {
    label: string;
    name: string;
    type?: 'text' | 'email' | 'tel' | 'url' | 'password';
    placeholder?: string;
    required?: boolean;
    value?: string;
    className?: string;
}

const { 
    label, 
    name, 
    type = 'text', 
    placeholder, 
    required = false, 
    value = '',
    className = ''
} = Astro.props;

const inputId = `input-${name}`;
---

<div class={`form-field ${className}`}>
    <label for={inputId} class="block text-white font-medium mb-2">
        {label}
        {required && <span class="text-orange">*</span>}
    </label>
    <input
        type={type}
        id={inputId}
        name={name}
        value={value}
        required={required}
        placeholder={placeholder}
        class="w-full px-4 py-3 bg-black border border-white/20 text-white placeholder-eagle focus:border-orange focus:outline-none transition-colors duration-200"
    />
</div>

<style>
    .form-field input:focus {
        box-shadow: 0 0 0 2px rgba(38, 224, 86, 0.2);
    }
</style>
