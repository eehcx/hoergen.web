---
export interface Props {
    label: string;
    name: string;
    placeholder?: string;
    required?: boolean;
    value?: string;
    rows?: number;
    className?: string;
}

const { 
    label, 
    name, 
    placeholder, 
    required = false, 
    value = '',
    rows = 4,
    className = ''
} = Astro.props;

const textareaId = `textarea-${name}`;
---

<div class={`form-field ${className}`}>
    <label for={textareaId} class="block text-white font-medium mb-2">
        {label}
        {required && <span class="text-orange">*</span>}
    </label>
    <textarea
        id={textareaId}
        name={name}
        required={required}
        rows={rows}
        placeholder={placeholder}
        class="w-full px-4 py-3 bg-black border border-white/20 text-white placeholder-eagle focus:border-orange focus:outline-none transition-colors duration-200 resize-vertical"
    >{value}</textarea>
</div>

<style>
    .form-field textarea:focus {
        box-shadow: 0 0 0 2px rgba(38, 224, 86, 0.2);
    }
</style>
