---
import { t, getLocalizedPath } from "@/utils/i18n";

export interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
---

<footer class="border-white/20 border-b bg-accent-500">
  <div class="mx-auto border-white/20 border-x max-w-7xl">
    <div class="mx-auto p-8 items-start justify-between w-full">
      <div class="text-white text-center items-center mx-auto">
        <p class="uppercase font-display text-2xl">{t(lang, 'footer.title')}</p>
        <p class="mx-auto mt-3 text-sm">
          {t(lang, 'footer.description')}
        </p>
      </div>
    </div>
    <div class="mx-auto border-white/20 border-t flex flex-col p-8">
      <p class="text-white text-center text-sm font-display">
        Copyright © 2025 Hörgen. All rights reserved. <br />
        <a href={getLocalizedPath(lang, '/privacy')} class="text-eagle hover:underline">{t(lang, 'footer.links.privacyPolicy')}</a> |
        <a href={getLocalizedPath(lang, '/terms')} class="text-eagle hover:underline">{t(lang, 'footer.links.termsOfService')}</a>
      </p>
    </div>
  </div>
</footer>
