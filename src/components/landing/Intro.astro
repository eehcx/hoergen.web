---
import { t } from "@/utils/i18n";

export interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
---

<section class="border-white/20  border-b ">
  <div class="mx-auto border-white/20  border-x max-w-7xl gradient-grid">
    <div class="mx-auto max-w-7xl p-8">
      <p class="text-white font-display uppercase lg:text-6xl text-xl">
        {t(lang, 'intro.about')}
      </p>
    </div>
    <div class="mx-auto max-w-7xl p-8">
      <p class="text-white font-display uppercase lg:text-3xl">
        {t(lang, 'intro.community')}
      </p>
    </div>
  </div>
</section>
