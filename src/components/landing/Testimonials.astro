---
import { t } from "@/utils/i18n";

export interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const testimonials = t(lang, 'testimonials');
---

<div
  class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 mx-auto p-8 sm:grid-cols-2"
>
  {testimonials.map((testimonial: any, index: number) => (
    <div class="flex flex-col justify-between h-full">
      <p class={
        index === 0 ? "text-[#1FB645]" :
        index === 1 ? "text-[#25D852]" :
        index === 2 ? "text-[#2fe25c]" :
        "text-eagle"
      }>
        {testimonial.quote}
      </p>
      <div class="mt-3">
        <span class="block font-semibold mt-3">{testimonial.author}</span>
        <span class="block text-eagle">{testimonial.source}</span>
      </div>
    </div>
  ))}
</div>
