---
import BaseLayout from '../layouts/BaseLayout.astro';
import { defaultLang, t } from '@/utils/i18n';

const lang = defaultLang; 
const privacy = t(lang, 'privacy');
---

<script define:vars={{ pageTitle: `${privacy.title} | Hoergen` }}>
    document.title = pageTitle;
</script>

<BaseLayout title={privacy.title} lang={lang}>
    <section class="border-white/20 border-b">
        <div class="mx-auto border-white/20 border-x max-w-7xl">
            <div class="px-4 py-24 max-w-4xl mx-auto">
                <h1 class="text-4xl font-display text-center mb-6 text-white mt-24">{privacy.title}</h1>
                <p class="text-eagle mb-4">{privacy.intro}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.informationTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.informationIntro}</p>
                <ul class="list-disc pl-6 text-eagle mb-4">
                    <li><strong>{privacy.sections.personalTitle}</strong>: {privacy.sections.personalDesc}</li>
                    <li><strong>{privacy.sections.usageTitle}</strong>: {privacy.sections.usageDesc}</li>
                    <li><strong>{privacy.sections.deviceTitle}</strong>: {privacy.sections.deviceDesc}</li>
                    <li><strong>{privacy.sections.authTitle}</strong>: {privacy.sections.authDesc}</li>
                </ul>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.useTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.useIntro}</p>
                <ul class="list-disc pl-6 text-eagle mb-4">
                    {privacy.sections.useList.map((item) => <li>{item}</li>)}
                </ul>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.protectionTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.protectionDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.childrenTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.childrenDesc1}</p>
                <p class="text-eagle mb-4">{privacy.sections.childrenDesc2}</p>
                <p class="text-eagle mb-4">{privacy.sections.childrenDesc3}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.rightsTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.rightsIntro}</p>
                <ul class="list-disc pl-6 text-eagle mb-4">
                    {privacy.sections.rightsList.map((item) => <li>{item}</li>)}
                </ul>
                <p class="text-eagle mb-4">{privacy.sections.rightsContact}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.thirdTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.thirdDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{privacy.sections.contactTitle}</h2>
                <p class="text-eagle mb-4">{privacy.sections.contactDesc1}</p>
                <p class="text-eagle mb-2"><strong>Email:</strong> <a href="mailto:contact@hoergen.com" class="hover:underline">contact@hoergen.com</a></p>
                <p class="text-eagle mb-4"><strong>Contact Form:</strong> {privacy.sections.contactForm}</p>
                <p class="text-eagle">{privacy.sections.responseTime}</p>
            </div>
        </div>
    </section>
</BaseLayout>