---
// src/pages/terms.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { defaultLang, t } from '@/utils/i18n';

const lang = defaultLang; // Usar idioma por defecto temporalmente
const terms = t(lang, 'terms');
---

<script define:vars={{ pageTitle: `${terms.title} | Hoergen` }}>
    document.title = pageTitle;
</script>

<BaseLayout title={terms.title} lang={lang}>
    <section class="border-white/20 border-b">
        <div class="mx-auto border-white/20 border-x max-w-7xl">
            <div class="px-4 py-24 max-w-4xl mx-auto">
                <h1 class="text-4xl font-display text-center mb-6 text-white mt-24">{terms.title}</h1>
                <p class="text-eagle mb-4">{terms.intro}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.eligibilityTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.eligibilityDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.conductTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.conductIntro}</p>
                <ul class="list-disc pl-6 text-eagle mb-4">
                    {terms.sections.conductList.map((item) => <li>{item}</li>)}
                </ul>
                <p class="text-eagle mb-4">{terms.sections.conductModeration}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.suspensionTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.suspensionDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.ipTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.ipDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.disclaimerTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.disclaimerDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.limitationTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.limitationDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.changesTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.changesDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.lawTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.lawDesc}</p>
                <h2 class="text-2xl font-display mt-6 mb-4 text-white">{terms.sections.contactTitle}</h2>
                <p class="text-eagle mb-4">{terms.sections.contactDesc}</p>
                <p class="text-eagle mb-2"><strong>Email:</strong> <a href="mailto:contact@hoergen.com" class="hover:underline">contact@hoergen.com</a></p>
                <p class="text-eagle"><strong>Contact Form:</strong> {terms.sections.contactForm}</p>
                <p class="text-eagle mt-6 italic">{terms.sections.lastUpdated}</p>
            </div>
        </div>
    </section>
</BaseLayout>
